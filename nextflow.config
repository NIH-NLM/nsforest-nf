// Enable monitoring and logging
timeline.enabled            = true
trace.enabled               = true
dag.enabled                 = true

// Define pipeline parameters
params {
    author               = 'name'
    condition            = 'normal'
    datasets_csv         = 'kidney.csv'
    embedding_key_ch     = 'X_umap'
    gencode_release      = 49
    h5ad_ch              = '5774ef6a-4082-48f6-a692-674637671aa5.h5ad'
    label_key_ch         = 'subclass.l3'
    metric               = 'euclidean'
    organism             = 'Homo sapiens'
    publication_date     = 'year'
    publication          = 'publication_name'
    tissue               = 'kidney'
    outdir               = 'results'
    save_annotation      = true
    save_cluster_summary = true
    save_scores          = true
    silhouette_score     = 'silhouette_score'
    sort_by              = 'median'
    score_col            = 'silhouette_score'
}


// Enable docker
docker {
  enabled = true
  runOptions = '--pull always'
}

 process {
    withName: build_symbol_map_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }
    
    withName: run_dendrogramplot_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }
    
    withName: run_dotplot_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }

    withName: filter_condition_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }

    withName: filter_tissue_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }

    withName: run_matrixplot_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }
    
    withName: prep_binary_scores_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
        cpus = 32
	maxForks = 31
        memory = '256 GB'
    }

    withName: prep_medians_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 64
        cpus = 63
        memory = '488 GB'
    }

    withName: run_nsforest_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
        cpus = 64
	maxForks = 63
        memory = '488 GB'
    }

    withName: sanitize_labels_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }
    
    withName: symbolize_genes_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }
    
    withName: run_violinplot_process {
        container = 'ghcr.io/nih-nlm/nsforest-nf/nsforest:latest'
	maxForks = 7
        cpus = 8
        memory = '32 GB'
    }

}