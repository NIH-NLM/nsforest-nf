/*
 * Configuration for scsilhouette standalone test
 * Extends macamd64.config with scsilhouette container
 */

// Import base config
includeConfig 'macamd64.config'

// Override/add scsilhouette-specific settings
process {
    withLabel: scsilhouette {
        container = 'ghcr.io/nih-nlm/scsilhouette:1.0'
        containerOptions = '--entrypoint='
        cpus = 4
        memory = '8 GB'
    }
}

// Ensure Docker platform is set for Apple Silicon
docker {
    enabled = true
    runOptions = '--platform linux/amd64'
}
